<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.depaul.csc472.zrahman_remote_control" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ZR_activity_dvr"
            android:label="@string/title_activity_zr_activity_dvr" >
        </activity>
        <activity
            android:name=".ZRConfirgurationActivity"
            android:label="@string/title_activity_zrconfirguration" >
        </activity>
    </application>

</manifest>
